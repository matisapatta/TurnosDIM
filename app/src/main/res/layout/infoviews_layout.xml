<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardBackgroundColor="#00000000"
        card_view:cardUseCompatPadding="true"
        android:padding="2dp">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_cards">
        <TextView android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Mieasdas"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/naranjaClaro"/>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_turno"
                    android:id="@+id/imgIcono"
                    android:padding="5dp"
                    android:adjustViewBounds="true"
                    />
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView android:id="@+id/txtTexto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Mie"
                        android:gravity="left"
                        android:textColor="#000000"
                        android:padding="1dp"
                        />
                    <TextView android:id="@+id/txtSubTexto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="Mie"
                        android:gravity="left"
                        android:textColor="@color/grisOscuro"
                        android:padding="1dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>