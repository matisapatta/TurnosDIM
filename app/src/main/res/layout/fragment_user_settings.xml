<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentUserSettings2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.UserSettingsFragment">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="384dp"
    android:layout_height="10000dp"
    tools:layout_editor_absoluteX="0dp"
    app:layout_constraintTop_toTopOf="@+id/fragmentUserSettings2"
    app:layout_constraintEnd_toEndOf="@id/fragmentUserSettings2"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="10000dp"
        android:id="@+id/fragmentUserSettings">


    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNombrePaciente"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/fragmentUserSettings"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Nombre"
        android:ems="10"
        android:id="@+id/inputNombre"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="@+id/fragmentUserSettings"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentUserSettings"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="DNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDNIPaciente"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/inputNombre"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputDNI"
        android:hint="DNI"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDNIPaciente"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentUserSettings"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmailPaciente"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/inputDNI"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/inputEmail"
        android:hint="E-mail"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentUserSettings"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailPaciente" />

    <TextView
        android:text="Fecha de nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFechaNacPaciente"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail" />

    <EditText
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtFechaNacPaciente"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="Cobertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCoberturaPaciente"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Cobertura"
        android:ems="10"
        android:id="@+id/inputCobertura"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentUserSettings"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCoberturaPaciente" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="320dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>
