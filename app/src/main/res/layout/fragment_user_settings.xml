<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentUserSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.UserSettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@+id/fragmentUserSettings"
        android:layout_marginTop="10dp"
        android:id="@+id/scrollUserSettings"
        app:layout_constraintBottom_toTopOf="@+id/btnEditUser"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp">
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragment_user_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="layout.UserSettingsFragment"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalleUsuario"
                android:layout_margin="5dp"

                >
                <TableRow
                    android:layout_marginBottom="10dp"

                    >
                    <TextView
                        android:text="Nombre:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent">
                    <EditText
                        android:hint="Nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentNombre"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="DNI:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="DNI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentDNI"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="E-mail:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="E-mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentEmail"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Fecha de nacimiento:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_weight="1"/>
                    <TextView
                        android:text="Sexo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>

                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="09/09/1999"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:id="@+id/contentFnac"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>

                    <EditText
                        android:hint="SEXO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentSexo"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Teléfono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="Telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentTel"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Teléfono adicional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="Telefono Adicional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentTelAd"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/cobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="Cobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentCoberturaPaciente"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="Plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentPlanPaciente"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_detalleturno"/>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:text="Editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditUser"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentUserSettings"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentUserSettings"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_botonnaranja"
        android:textStyle="bold"/>

    <Button
        android:text="Guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveUser"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentUserSettings"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentUserSettings"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentUserSettings"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_botonnaranja"
        android:textStyle="bold"/>



</android.support.constraint.ConstraintLayout>
