<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_turno_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.mads.turnosdim.DetalleTurno">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@+id/activity_detalle_turno_main"
        android:layout_marginTop="10dp"
        android:id="@+id/scrollDetalleTurno"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveCalendar"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_detalle_turno_main"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp">
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_detalle_turno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="mobile.mads.turnosdim.DetalleTurno"
            android:orientation="horizontal">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalleTurnoMedico"
                android:layout_margin="5dp"
                android:shrinkColumns="1"
                >
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/medico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="texto que tiene sentido pero es muy largo para verse bien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentMedico"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/especialidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtEspecialidad"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="texto de la especialiasdasasdas sd a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentEspecialidad"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/fechahora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtFecha"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="texto fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentFecha"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/centro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCentro"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="texto centro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentCentro"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/consultorio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtConsultorio"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="texto consultorio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentConsultorio"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/cobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtCobertura"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="texto cobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentCobertura"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>

                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/preparacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPreparacion"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <TextView
                        android:text="texto preparacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentPreparacion"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/practicas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPracticas"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <ExpandableListView
                        android:layout_width="191dp"
                        android:layout_height="36dp"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:text="@string/addtocalendar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveCalendar"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_detalle_turno_main"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_detalle_turno_main"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_simple"
        android:textStyle="bold"/>

    <Button
        android:text="@string/cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDelete"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_detalle_turno_main"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_detalle_turno_main"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/btnSaveCalendar"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.75"
        android:background="@drawable/button_simple"
        android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>
