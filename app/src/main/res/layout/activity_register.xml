<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.mads.turnosdim.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@+id/activity_register"
        android:layout_marginTop="10dp"
        android:id="@+id/scrollUserSettings"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveNewUser"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp">
        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragment_user_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="layout.UserSettingsFragment"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detalleUsuario"
                android:layout_margin="5dp"

                >
                <TableRow
                    android:layout_marginBottom="10dp"

                    >
                    <TextView
                        android:text="Nombre:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent">
                    <EditText
                        android:hint="Nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentNombre"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="DNI:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="DNI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentDNI"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="E-mail:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="E-mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentEmail"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Fecha de nacimiento:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="Sexo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="09/09/1999"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:id="@+id/contentFnac"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerSexo" />

                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Teléfono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="Telefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentTel"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Teléfono adicional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <EditText
                        android:hint="Telefono Adicional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contentTelAd"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/background_detalleturno"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="@string/cobertura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerCobertura" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:text="Plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </TableRow>
                <TableRow
                    android:layout_marginBottom="10dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerPlan" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>


    <Button
        android:text="Guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveNewUser"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_register"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_register"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_register"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_botonnaranja"
        android:textStyle="bold"/>


</android.support.constraint.ConstraintLayout>
