<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentNuevoTurno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.NuevoTurnoFragment">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:text="Seleccione el tipo de turno que desea solcitar"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/fragmentNuevoTurno"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentNuevoTurno"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentNuevoTurno"
        android:layout_marginLeft="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentNuevoTurno"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentNuevoTurno"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        >
        <Button
            android:text="Estudios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/icon_estudio"
            android:drawableStart="@drawable/icon_estudio"
            android:padding="15dp"
            android:background="@drawable/button_icono"
            android:gravity="center_vertical|end"
            android:paddingBottom="10dp"
            android:id="@+id/btnEstudios"
            />
        <Button
            android:text="Consulta MÃ©dica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:drawableLeft="@drawable/icon_consultamedica"
            android:drawableStart="@drawable/icon_consultamedica"
            android:background="@drawable/button_icono"
            android:gravity="center_vertical|end"
            android:paddingBottom="10dp"
            android:id="@+id/btnConsulta" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
