<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentTurnos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.TurnosFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:text="Listado de Turnos del paciente "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/turnosListText"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentTurnos"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentTurnos"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/fragmentTurnos" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/turnosRecView"
        android:scrollbars="vertical"
        android:layout_width="346dp"
        android:layout_height="438dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/turnosListText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/fragmentTurnos"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/fragmentTurnos"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentTurnos"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.56"
        app:layout_constraintHorizontal_bias="0.75">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>